@{
    ViewData["Title"] = "Create";
}
<div class="row justify-content-center" onload="getLocation()">
    <form class="col-lg-12 col-11 mt-3" id="CreateCollege" onsubmit="return false">
        <div class="row mt-5 text-center border-16 bg-blue-light p-5 justify-content-center">

            <div class="col-12 mb-4">
                <h3 class="font-weight-bold">Welcome</h3>
                <p class="font-weight-bold">
                    Sign up To Join College Exams
                </p>
            </div>

            <div class="col-12 my-3 text-center">
                <input type="text" name="Name" placeholder="Enter Your College Name" class="py-3 px-4 border-0 border-12 shadow-2 shadow-1-hover smooth-transition font-weight-bold" />
            </div>

            <div class="col-12 my-3 text-center">
                <input type="email" name="Email" placeholder="Enter Your Email" class="py-3 px-4 border-0 border-12 shadow-2 shadow-1-hover smooth-transition font-weight-bold" />
            </div>

            <div class="col-md-6 col-12 my-3 text-center">
                <input type="password" name="Password" placeholder="Enter Password" class="py-3 px-4 border-0 border-12 shadow-2 shadow-1-hover smooth-transition font-weight-bold" />
            </div>
            <div class="col-md-6 col-12 my-3 text-center">
                <input type="password" id="ConfirmPass" placeholder="Confirm Password" class="py-3 px-4 border-0 border-12 shadow-2 shadow-1-hover smooth-transition font-weight-bold" />
            </div>

            <div class="col-12 border-top w-75 my-4"></div>

            <div class="col-md-6 col-12 my-3 text-center">
                <input type="text" name="Country" placeholder="Enter Your Country" class="py-3 px-4 border-0 border-12 shadow-2 shadow-1-hover smooth-transition font-weight-bold" />
            </div>

            <div class="col-md-6 col-12 my-3 text-center">
                <input type="text" name="State" placeholder="Enter Your State" class="py-3 px-4 border-0 border-12 shadow-2 shadow-1-hover smooth-transition font-weight-bold" />
            </div>

            <div class="col-md-6 col-12 my-3 text-center">
                <input type="text" name="City" placeholder="Enter Your City" class="py-3 px-4 border-0 border-12 shadow-2 shadow-1-hover smooth-transition font-weight-bold" />
            </div>

            <div class="col-md-6 col-12 my-3 text-center">
                <input type="number" name="Pincode" placeholder="Enter Your City's Pincode" class="py-3 px-4 border-0 border-12 shadow-2 shadow-1-hover smooth-transition font-weight-bold" />
            </div>

            <div class="col-md-6 col-12 my-3 text-center">
                <input type="number" name="DefaultLink" placeholder="Enter Your College's Link" class="py-3 px-4 border-0 border-12 shadow-2 shadow-1-hover smooth-transition font-weight-bold" />
            </div>

            <div class="col-12 my-3 mt-5">
                <input onclick="CreateCollege()" class="bg-blue text-white shadow-blue border-10 px-5 py-3 bg-blue-hover shadow-blue-hover smooth-transition cursor-pointer mx-5 border-0" type="submit" value="Sign Up">
            </div>


            <div class="col-12 my-2 d-none">
                <a onclick="StopInterval()" class="bg-blue text-white shadow-blue border-10 px-4 py-2 bg-blue-hover shadow-blue-hover smooth-transition cursor-pointer mx-5">
                    Stop
                </a>
            </div>

        </div>
    </form>
</div>
